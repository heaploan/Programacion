import random

numeroAleatorio = random.randint(1, 50)
intentoActual = 1
maxIntentos = 5
numeroIntroducido = 0

print(numeroAleatorio)

# Creamos n como la variable para que se guarde el numero introducido por el usuario.
while intentoActual <= maxIntentos:
    numeroIntroducido = int(input("Intenta adivinar el numero en un rango del 1 al 50: "))

    if numeroIntroducido > numeroAleatorio:
        print(f"Numero mayor, intenta de nuevo. Te quedan: {maxIntentos - intentoActual}.")
    elif numeroIntroducido < numeroAleatorio:
        print(f"Numero menor, intenta de nuevo. Te quedan: {maxIntentos - intentoActual}.")
    else:
        break

    intentoActual += 1

    # creamos este if para asegurarnos de que el usuario no ponga un numero diferente al rango que se pide.
    # en este if validamos el numero en caso de ser igual al generado aleatoriamente indicando al usuario que ha ganado.
if numeroIntroducido == numeroAleatorio:
    print("Â¡Felicidades, has acertado!")
